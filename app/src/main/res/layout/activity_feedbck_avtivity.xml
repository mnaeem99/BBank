<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbckAvtivity">


    <RelativeLayout
        android:id="@+id/HeadToolbarID"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/MM"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:elevation="5dp"
            android:src="@drawable/smill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/MM"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:elevation="5dp"
            android:text="My Feedback"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/feedbacimage">


        </ImageView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/TabLayoutUDUDU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:tabTextColor="@android:color/white">

        </com.google.android.material.tabs.TabLayout>


    </RelativeLayout>

  <androidx.viewpager.widget.ViewPager
      android:layout_below="@+id/HeadToolbarID"
      android:id="@+id/ViewPagerIDID"
      android:layout_width="match_parent"
      android:background="@android:color/white"
      android:layout_height="match_parent">



  </androidx.viewpager.widget.ViewPager>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        android:textSize="13dp"
        android:text="Swipe to next >>"
        />


</RelativeLayout>